{
  "expo": {
    "name": "LoocateMe",
    "slug": "loocateme-app",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appIcons/AppIcon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "updates": {
      "url": "https://u.expo.dev/da2f75d4-ab23-4073-8db9-1ab186cc22d6"
    },
    "splash": {
      "image": "./assets/appIcons/AppIcon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "me.loocate.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "Votre position est utilisée pour afficher les utilisateurs autour de vous.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Votre position en arrière-plan peut être partagée pendant 1 heure lorsque vous l’activez.",
        "NSLocationAlwaysUsageDescription": "Votre position en arrière-plan peut être partagée pendant 1 heure lorsque vous l’activez.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "me.loocate.app",
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-asset",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/appIcons/AppIcon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Votre position en arrière-plan peut être partagée pendant 1 heure lorsque vous l’activez."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "da2f75d4-ab23-4073-8db9-1ab186cc22d6"
      }
    }
  }
}
